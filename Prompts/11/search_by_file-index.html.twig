{% extends 'base.html.twig' %}

{% block title %}Search by File{% endblock %}

{% block body %}
    <h1>Search by File</h1>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button class="btn btn-primary">Search</button>
    {{ form_end(form) }}

    {% if patients is not empty %}
        <h2>Search Results</h2>
        <div class="table-responsible">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>File</th>
                    <th>Name</th>
                    <th>Disability</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for patient in patients %}
                    <tr>
                        <td>{{ patient.id }}</td>
                        <td>{{ patient.file }}</td>
                        <td>{{ patient.name }}</td>
                        <td>{{ patient.disability ? 'Yes' : 'No' }}</td>
                        <td>
                            <a class="btn btn-link" href="{{ path('app_patient_show', {'id': patient.id}) }}">Show</a>
                            <a class="btn btn-secondary" href="{{ path('app_patient_edit', {'id': patient.id}) }}">Edit</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% elseif app.request.method == 'POST' %}
        <p>No records found.</p>
    {% endif %}
{% endblock %}
