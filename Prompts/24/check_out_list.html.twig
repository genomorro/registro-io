{% extends 'base.html.twig' %}

{% block title %}{{ 'checkout.title'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'checkout.title'|trans }}</h1>

    <h2>{{ 'checkout.patients.title'|trans }}</h2>
    <table class="table">
        <thead>
            <tr>
                <th>{{ 'checkout.table.header.id'|trans }}</th>
                <th>{{ 'checkout.table.header.file'|trans }}</th>
                <th>{{ 'checkout.table.header.name'|trans }}</th>
                <th>{{ 'checkout.table.header.tag'|trans }}</th>
                <th>{{ 'checkout.table.header.checkin'|trans }}</th>
                <th>{{ 'checkout.table.header.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for attendance in patients %}
            <tr>
                <td>{{ attendance.patient.id }}</td>
                <td>{{ attendance.patient.file }}</td>
                <td>{{ attendance.patient.name }}</td>
                <td>{{ attendance.tag }}</td>
                <td>{{ attendance.checkInAt ? attendance.checkInAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <form method="post" action="{{ path('app_patient_check_out_list', {'id': attendance.patient.id}) }}" onsubmit="return confirm('{{ 'checkout.confirm'|trans }}');">
                        <button type="submit" class="btn btn-danger">{{ 'checkout.button'|trans }}</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">{{ 'checkout.patients.none_found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <h2>{{ 'checkout.visitors.title'|trans }}</h2>
    <table class="table">
        <thead>
            <tr>
                <th>{{ 'checkout.table.header.id'|trans }}</th>
                <th>{{ 'checkout.table.header.name'|trans }}</th>
                <th>{{ 'checkout.table.header.tag'|trans }}</th>
                <th>{{ 'checkout.table.header.checkin'|trans }}</th>
                <th>{{ 'checkout.table.header.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for visitor in visitors %}
            <tr>
                <td>{{ visitor.id }}</td>
                <td>{{ visitor.name }}</td>
                <td>{{ visitor.tag }}</td>
                <td>{{ visitor.checkInAt ? visitor.checkInAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <form method="post" action="{{ path('app_visitor_check_out_list', {'id': visitor.id}) }}" onsubmit="return confirm('{{ 'checkout.confirm'|trans }}');">
                        <button class="btn btn-danger">{{ 'checkout.button'|trans }}</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{{ 'checkout.visitors.none_found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
