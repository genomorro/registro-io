{% extends 'base.html.twig' %}

{% block title %}Patient{% endblock %}

{% block body %}
    <h1>Patient</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ patient.id }}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>{{ patient.file }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ patient.name }}</td>
            </tr>
            <tr>
                <th>Disability</th>
                <td>{{ patient.disability ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <hr>

    <h2>Today's Appointments</h2>
    <table class="table">
        <thead>
        <tr>
            <th>Place</th>
            <th>Date</th>
            <th>Type</th>
        </tr>
        </thead>
        <tbody>
        {% for appointment in patient.appointments|filter(a => a.dateAt|date('Y-m-d') == 'now'|date('Y-m-d')) %}
            <tr>
                <td>{{ appointment.place }}</td>
                <td>{{ appointment.dateAt ? appointment.dateAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ appointment.type }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <h2>Other Appointments</h2>
    <table class="table">
        <thead>
        <tr>
            <th>Place</th>
            <th>Date</th>
            <th>Type</th>
        </tr>
        </thead>
        <tbody>
        {% for appointment in patient.appointments|filter(a => a.dateAt|date('Y-m-d') != 'now'|date('Y-m-d')) %}
            <tr>
                <td>{{ appointment.place }}</td>
                <td>{{ appointment.dateAt ? appointment.dateAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ appointment.type }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_patient_index') }}">back to list</a>

    <a href="{{ path('app_patient_edit', {'id': patient.id}) }}">edit</a>

    {{ include('patient/_delete_form.html.twig') }}
{% endblock %}
